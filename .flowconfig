[ignore]
.*/node_modules/.*
.*/internals/.*
.*/build/.*
.*/app/index\.js
.*\.test\.js
.*\.scss

  <PROJECT_ROOT>/node_modules/editions  # you can still selectively ignore packages that cause flow errors
[include]
flow-typed

[libs]
<PROJECT_ROOT>/flow-typed/

[lints]

[options]
module.system=haste
all=true
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=.css
module.file_ext=.scss
module.name_mapper.extension='scss' -> 'CSSModule'
module.name_mapper.extension='sass' -> 'CSSModule'
module.name_mapper.extension='css' -> 'CSSModule'
module.name_mapper='^containers\(.*\)$' -> '<PROJECT_ROOT>/app/containers/\1'
module.name_mapper='^components\(.*\)$' -> '<PROJECT_ROOT>/app/components/\1'
module.name_mapper='^lib\(.*\)$' -> '<PROJECT_ROOT>/app/lib/\1'

[strict]
